{
	"root": true,
	"extends": [
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"rules": {
		"@typescript-eslint/naming-convention": "warn",
		"@typescript-eslint/semi": "off",
		"curly": "warn",
		"object-curly-spacing": "off",
		"eqeqeq": "warn",
		"no-throw-literal": "error",
		"no-unexpected-multiline": "error",
		"semi": "off",
		"prettier/prettier": [
			"error",
			{
				"printWidth": 160,
				"semi": false,
				"singleQuote": true,
				"trailingComma": "es5",
				"useTabs": true,
				"endOfLine": "auto",
				"arrowParens": "avoid"
			}
		]
	},
	"ignorePatterns": [
		"out",
		"dist",
		"**/*.d.ts"
	]
}
